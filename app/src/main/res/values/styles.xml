<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>-->
        <!--<item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>

    <style name="TransparentActionBarTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MainActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/colorBackgroundPrimary</item>
    </style>

    <style name="HintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/colorLabelText</item>
        <item name="android:textSize">@dimen/profile_label_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderText2" parent="HeaderText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <!--<item name="android:stateListAnimator">@animator/button_animator</item>-->
        <!--<item name="android:outlineAmbientShadowColor">@color/colorButton</item>-->
        <!--<item name="android:ambientShadowAlpha">0.039</item>-->
        <!--<item name="android:outlineSpotShadowColor">@color/colorButton</item>-->
        <!--<item name="android:spotShadowAlpha">0.19</item>-->
        <item name="android:background">@drawable/button_with_shadow</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingStart">43dp</item>
        //38
        <item name="android:paddingEnd">43dp</item>
        //38
        <item name="android:paddingBottom">25dp</item>
    </style>


    <style name="SeparatorStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

    <style name="DefaultLinkText">
        <item name="android:textColor">@color/link</item>
    </style>

    <style name="FacebookButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:background">@color/facebookButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TwitterButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:background">@color/twitterButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
