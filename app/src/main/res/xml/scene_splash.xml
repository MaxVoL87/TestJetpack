<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:duration="1000"
        motion:motionInterpolator="linear">

        <KeyFrameSet>

            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot0"
                motion:percentY="-0.3" />

            <KeyPosition
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot1"
                motion:percentX="0.5" />

            <KeyPosition
                motion:framePosition="30"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot0"
                motion:percentY="0.0" />

            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot0"
                motion:percentY="0.3" />

            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot2"
                motion:percentX="1" />

            <KeyPosition
                motion:framePosition="70"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot0"
                motion:percentY="0.0" />

            <KeyPosition
                motion:framePosition="90"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@+id/tvDot0"
                motion:percentY="-0.3" />


        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@id/tvDot0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvAction"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/tvDot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvDot0"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/tvDot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvDot1"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/tvDot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvDot2"
            motion:layout_constraintTop_toTopOf="parent"/>


    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        tools:visibility="visible">


        <Constraint
            android:id="@id/tvDot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvAction"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@id/tvDot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvDot1"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/tvDot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvDot2"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/tvDot0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toEndOf="@id/tvDot3"
            motion:layout_constraintTop_toTopOf="parent"/>

    </ConstraintSet>

</MotionScene>